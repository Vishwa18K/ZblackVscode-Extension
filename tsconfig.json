{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "${workspaceFolder}/dist",
    "mapRoot": "${workspaceFolder}/dist",
    "rootDir": "./src",
    "sourceRoot": "/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}