{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TypeScript File",
            "type": "typescript",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": true,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/dist",
            "rootDir": "${workspaceFolder}/src",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug main.ts",
            "type": "typescript", 
            "request": "launch",
            "program": "${workspaceFolder}/src/main.ts",
            "stopOnEntry": true,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/dist",
            "rootDir": "${workspaceFolder}/src",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run TypeScript File (No Debug)",
            "type": "typescript",
            "request": "launch", 
            "program": "${file}",
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/dist",
            "rootDir": "${workspaceFolder}/src",
            "noDebug": true
        },
        {
            "name": "Debug with Custom Port", 
            "type": "typescript",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.ts",
            "stopOnEntry": true,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/dist",
            "rootDir": "${workspaceFolder}/src",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--inspect=9230"
            ]
        },
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "${workspaceFolder}/npm: compile"
        },
        {
            "name": "Debug Extension",
            "type": "extensionHost", 
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "${workspaceFolder}/npm: compile"
        },
        {
            "name": "Debug Extension + Debug Adapter",
            "type": "extensionHost",
            "request": "launch", 
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "${workspaceFolder}/npm: compile",
            "env": {
                "VSCODE_DEBUG_MODE": "true"
            }
        },
        {
            "name": "Debug TypeScript Debug Adapter",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/mockDebug.js",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"  
            ],
            "preLaunchTask": "${workspaceFolder}/npm: compile"
        }
    ],
    "compounds": [
        {
            "name": "Debug Extension + Adapter",
            "configurations": [
                "Debug Extension",
                "Debug TypeScript Debug Adapter"
            ]
        }
    ]
}
